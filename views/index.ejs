<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="stylesheets/bootstrap.min.css" rel="stylesheet" />
    <link href="stylesheets/browse.css" rel="stylesheet" />

    <title>小书箱</title>
  </head>

  <body>

    <% include header.ejs %>

    <section id="main">
      <div class="head-descript">
		    <div class="head-descript-text">
		    </div>
      </div>

      <div class="category">
        <ul class="nav nav-tabs nav-justified" role="tablist">
          <li role="presentation">
            <div class="category-first">分类</div></li>
          <li role="presentation" class="active" cate="0">
            <a class="cate" href="#">全部</a></li>

          <% for (var i in cates) { %>
            <% if (i < cates.show) { %>
              <li role="presentation" cate="<%= cates[i].id %>">
                <a class="cate" href="#<%= cates[i].name %>"><%= cates[i].name %></a></li>
            <% } else { %>
                <% if (i == cates.show) { %>
                  <li role="presentation" class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                      更多 <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                <% } %>
                <li role="presentation" cate="<%= cates[i].id %>">
                  <a class="cate" href="#<%= cates[i].name %>"><%= cates[i].name %></a></li>
                <% if (i == cates.length) {%>
                    </ul>
                  </li>
                <% } %>
            <% } %>
          <% } %>

        </ul>
      </div>

      <nav class="query navbar navbar-default" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed"
              data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><a href="#">默认排序</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  销量排序<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">升序</a></li>
                  <li><a href="#">降序</a></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  价格排序<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">升序</a></li>
                  <li><a href="#">降序</a></li>
                </ul>
              </li>
            </ul>
            <form class="navbar-form navbar-right" role="search">
              <div class="input-group">
                <div class="input-group-btn">
                  <button type="button" class="btn btn-default dropdown-toggle"
                    data-toggle="dropdown">书名 <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">书名</a></li>
                    <li><a href="#">作者</a></li>
                  </ul>
                </div><!-- /btn-group -->
                <input type="text" class="form-control">
              </div><!-- /input-group -->
              <button type="submit" class="btn btn-default">搜索</button>
            </form>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>

      <div class="book-group">
        <div class="container-fluid">
          <div class="row">

            <% for (var i in books) { %>
              <div class="book-item col-md-6" in_cate="<%= books[i].cate_id %>">
                <a class="book-img-a" href="book?book=<%= books[i].id %>">
                  <img  class="img-thumbnail book-img" alt="无封面"
                    src="images/<%= books[i].image %>"/>
                </a>
                <a href="book?book=<%= books[i].id %>">
                  <p class="name"><%= books[i].name %></p>
                </a>
                <p class="price">￥<%= books[i].price %></p>
                <p class="author"><%= books[i].author %></p>
                <p class="descript"><%= books[i].descript %></p>
                <hr/>
              </div>
            <% } %>

          </div>
        </div>
      </div>
    </section>

    <footer></footer>

    <!-- jQuery -->
    <script src="javascripts/jquery-2.2.2.min.js"></script>
    <!-- bootstrap -->
    <script src="javascripts/bootstrap.min.js"></script>

    <script src="javascripts/browse.js"></script>
  </body>

</html>
